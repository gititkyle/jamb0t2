{
    "name": "jamb0t2",
    "version": "1.0.0",
    "description": "the jambot bot",
    "watch": {
        "build:dev": {
            "patterns": [
                "app"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "scripts": {
        "watch:dev": "npm-watch build:dev",
        "build:dev": "npm start",
        "prestart": "run-s clean:dist build:dist",
        "start": "node dist/app/app.js",
        "start:dev": "npm run watch:dev",
        "build:dist": "tsc",
        "build": "sh build/build.sh",
        "clean:dist": "rm -rf dist",
        "pretest": "NODE_PATH=./:./app",
        "test": "mocha",
        "test:coverage": "nyc --reporter=html mocha"
    },
    "author": "chooooons",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "4.2.11",
        "@types/lodash": "4.14.150",
        "@types/mocha": "7.0.2",
        "@types/mongoose": "^5.7.20",
        "@types/node": "13.13.5",
        "@types/node-fetch": "2.5.7",
        "@types/plugapi": "4.2.4",
        "@types/sinon": "9.0.0",
        "@types/sinon-chai": "3.2.4",
        "@types/twitter": "1.7.0",
        "chai": "4.2.0",
        "mocha": "7.1.2",
        "npm-run-all": "4.1.5",
        "npm-watch": "0.6.0",
        "nyc": "15.0.1",
        "sinon": "9.0.2",
        "sinon-chai": "3.5.0",
        "ts-node": "8.10.1",
        "tslint": "6.1.2",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "lodash": "4.17.15",
        "log4js": "6.2.1",
        "moment": "2.29.4",
        "mongoose": "5.9.14",
        "node-fetch": "2.6.0",
        "plugapi": "5.1.1",
        "twitter": "1.7.1"
    }
}
